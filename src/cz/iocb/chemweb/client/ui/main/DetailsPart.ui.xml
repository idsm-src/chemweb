<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="res" type="cz.iocb.chemweb.client.resources.icons.Icons" />

  <ui:style>
    .frame {
      border: none;
    }

    .Toolbar {
      border-bottom: 1px solid gray;
      padding: 2px;
      min-width: 400px;
    }

    .ToolbarButton-small {
      width: 24px;
      height: 24px;
      display: inline-block;
    }

    .full-size {
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
    }
  </ui:style>


  <g:DockLayoutPanel>
    <g:north size="52">
      <g:LayoutPanel addStyleNames="{style.Toolbar}">
        <g:layer left="7px" width="26px" top="13px" height="26px">
          <g:PushButton ui:field="prevButton" enabled="false" styleName="gwt-Toolbar-PushButton" addStyleNames="{style.ToolbarButton-small}">
            <g:upFace>
              <img src="{res.prev.getSafeUri}" style="padding-top: 2px" />
            </g:upFace>
            <g:upDisabledFace>
              <img src="{res.prevDisabled.getSafeUri}" style="padding-top: 2px" />
            </g:upDisabledFace>
          </g:PushButton>
        </g:layer>
        <g:layer left="35px" width="26px" top="13px" height="26px">
          <g:PushButton ui:field="nextButton" enabled="false" styleName="gwt-Toolbar-PushButton" addStyleNames="{style.ToolbarButton-small}">
            <g:upFace>
              <img src="{res.next.getSafeUri}" style="padding-top: 2px" />
            </g:upFace>
            <g:upDisabledFace>
              <img src="{res.nextDisabled.getSafeUri}" style="padding-top: 2px" />
            </g:upDisabledFace>
          </g:PushButton>
        </g:layer>
        <g:layer left="63px" width="26px" top="13px" height="26px">
          <g:PushButton ui:field="stopButton" enabled="false" styleName="gwt-Toolbar-PushButton" addStyleNames="{style.ToolbarButton-small}" visible="false">
            <g:upFace>
              <img src="{res.loading.getSafeUri}" style="padding-top: 1px" />
            </g:upFace>
          </g:PushButton>
        </g:layer>
        <g:layer left="63px" width="26px" top="13px" height="26px">
          <g:PushButton ui:field="reloadButton" enabled="false" styleName="gwt-Toolbar-PushButton" addStyleNames="{style.ToolbarButton-small}">
            <g:upFace>
              <img src="{res.reload.getSafeUri}" style="padding-top: 1px" />
            </g:upFace>
            <g:upDisabledFace>
              <img src="{res.reloadDisabled.getSafeUri}" style="padding-top: 1px" />
            </g:upDisabledFace>
          </g:PushButton>
        </g:layer>
        <g:layer left="93px" right="13px" top="11px" height="30px">
          <g:TextBox ui:field="iriTextBox" addStyleNames="{style.full-size}"></g:TextBox>
        </g:layer>
      </g:LayoutPanel>
    </g:north>
    <g:center>
      <g:ScrollPanel ui:field="pageScrollPanel">
        <g:HTML ui:field="pageHTML" height="100%" width="100%" addStyleNames="{style.frame}" />
      </g:ScrollPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
